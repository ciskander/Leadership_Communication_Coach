# ── Airtable ──────────────────────────────────────────────────────────────────
AIRTABLE_TOKEN=your_airtable_personal_access_token
AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX

# ── OpenAI ────────────────────────────────────────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# ── Redis / Celery ────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Google OAuth ──────────────────────────────────────────────────────────────
OAUTH_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
# Full callback URL — must match Google Cloud Console authorised redirect URI
OAUTH_REDIRECT_URL=http://localhost:8000/api/auth/callback

# ── Session ───────────────────────────────────────────────────────────────────
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=change_me_to_a_long_random_secret

# ── Admin access ──────────────────────────────────────────────────────────────
# Comma-separated Google email addresses that receive admin role on first login
ADMIN_EMAILS=admin@example.com

# ── Frontend (for redirect URLs & CORS) ──────────────────────────────────────
FRONTEND_BASE_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# ── SQLite (auth DB) ──────────────────────────────────────────────────────────
# Leave empty to use default ./auth.db
SQLITE_DB_PATH=auth.db

# ── Server ────────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=INFO

# Set to "false" only in local HTTP development (never in production)
COOKIE_SECURE=false

# ── Frontend (Next.js) ────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
